<!DOCTYPE html>
@using Microsoft.AspNet.Identity
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SimpleCapaApp</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (ViewContext.HttpContext.User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("SimpleCapaApp", "Administrator", "UserPanel", new { UserId = User.Identity.GetUserId() }, new { @class = "navbar-brand" })
                }

                else if (ViewContext.HttpContext.User.IsInRole("Supervisor"))
                {
                    @Html.ActionLink("SimpleCapaApp", "Supervisor", "UserPanel", new { UserId = User.Identity.GetUserId() }, new { @class = "navbar-brand" })
                }

                else if (ViewContext.HttpContext.User.IsInRole("Technitian"))
                {
                    @Html.ActionLink("SimpleCapaApp", "Technitian", "UserPanel", new { UserId = User.Identity.GetUserId() }, new { @class = "navbar-brand" })
                }

                else
                {
                    @Html.ActionLink("SimpleCapaApp", "Index", "Home", new { UserId = User.Identity.GetUserId() }, new { @class = "navbar-brand" })
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (ViewContext.HttpContext.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Role", "Index", "Role")</li>
                    }
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
