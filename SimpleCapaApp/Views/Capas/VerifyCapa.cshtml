@model SimpleCapaApp.Models.Capa

<h3>Verification</h3>
<br />

<dl class="dl-horizontal">
    <dt>
        Name
    </dt>
    <dd>
        @Model.Name
    </dd>
    <dt>
        Description
    </dt>
    <dd>
        @Model.Description
    </dd>
    <dt>
        Technitian
    </dt>
    <dd>
        @Model.Supervisor.Email
    </dd>
    <dt>
        Due Date
    </dt>
    <dd>
        @Model.DueDate
    </dd>
</dl>


<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        @Html.ActionLink("Verify", "FinishCapaVerification", "Capas", new { CapaId = Model.Id }, null)
    </div>
</div>
