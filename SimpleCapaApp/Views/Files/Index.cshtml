
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">

    <div class="col-sm-12">
        <h3>
            Upload File:
        </h3>
    </div>

    @using (Html.BeginForm("Save", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <input type="file" name="UploadedFile"/>
        </div>
        <div class="col-sm-6">
            <input class="btn btn-primary" type="submit" name="Submit" value="Submit" />
        </div>

    }

</div>

<br/><br />


<div class="row">
    <table>
        <thead>

            <tr>
                <th> File Name </th>
                <th> Content Type </th>
            </tr>
        </thead>

        <tbody>

            @foreach (var f in Model)
            {
                <tr>
                    <td><a href="/files/GetFile/@f.Id">@f.FileName</a></td>
                    <td>@f.ContentType</td>
                </tr>
            }

        </tbody>
    </table>
</div>