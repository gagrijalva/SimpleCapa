@model IEnumerable<SimpleCapaApp.Models.Capa>
@{
    ViewBag.Title = "Capas";
}
<h2>Managing Capas</h2>
<p>
    @Html.ActionLink("Create New", "Create", "Capas")
</p>
<table class="table">
    <tr>
        <th>
            Supervisor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Status
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Capas", new { id = item.Id }, null) |
                @Html.ActionLink("Details", "Details", "Capas", new { id = item.Id }, null) |
                @Html.ActionLink("Delete", "Delete", "Capas", new { id = item.Id }, null)
            </td>
        </tr>
    }
</table>
